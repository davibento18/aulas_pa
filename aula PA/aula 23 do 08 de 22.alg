algoritmo "semnome"


var
 contador,numero,soma:inteiro
 media,qtde:real
inicio
para contador de 1 ate 527 faca

 se (contador mod 2 = 0 )entao
 soma <- soma + contador
 qtde <- qtde + 1
fimse
 fimpara
 escreval("A soma é: ",soma)
 escreval("Achei ",qtde," de pares")
 media <- soma/qtde
 escreval("A media é: ",media)


fimalgoritmo
